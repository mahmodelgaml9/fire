{
  "name": "vite-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "optimize": "node build-optimize.js",
    "build:prod": "npm run optimize && vite build",
    "analyze": "npm run build:prod && npx bundlesize",
    "lighthouse": "npx lighthouse http://localhost:5173 --output=html --output-path=./lighthouse-report.html"
  },
  "devDependencies": {
    "vite": "^5.4.2",
    "terser": "^5.19.2",
    "clean-css-cli": "^5.6.2",
    "imagemin-cli": "^7.0.0"
  },
  "bundlesize": [
    {
      "path": "./dist/scripts/*.js",
      "maxSize": "50 kB"
    },
    {
      "path": "./dist/*.html",
      "maxSize": "100 kB"
    }
  ]
}
